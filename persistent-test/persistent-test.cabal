name:            persistent-test
version:         1.2.0
license:         MIT
license-file:    LICENSE
author:          Michael Snoyman <michael@snoyman.com>
maintainer:      Michael Snoyman <michael@snoyman.com>
synopsis:        Tests for Persistent
description:     Tests for Persistent
category:        Database, Yesod
stability:       Stable
cabal-version:   >= 1.8
build-type:      Simple
homepage:        http://www.yesodweb.com/book/persistent

extra-source-files:
  test/main.hs
  test/from-cabal

Flag mongodb
   Description: test only MongoDB.  default is to test just sqlite.
   Default: False

Flag postgresql
   Description: test postgresql. default is to test just sqlite.
   Default: False

Flag mysql
   Description: test MySQL. default is to test just sqlite.
   Default: False

Flag couchdb
   Description: test couchDB. default is to test just sqlite.
   Default: False

library
    extra-libraries: sqlite3

    exposed-modules: PersistentTest
                     PersistTestPetType
                     RenameTest
                     DataTypeTest
                     HtmlTest
                     EmbedTest
                     LargeNumberTest
                     UniqueTest
                     MaxLenTest
                     SumTypeTest
                     MigrationOnlyTest
                     Init

                     Database.Persist
                     Database.Persist.Quasi

                     Database.Persist.Types
                     Database.Persist.Class
                     Database.Persist.Sql

                     Database.Persist.Types.Base
                     Database.Persist.Class.DeleteCascade
                     Database.Persist.Class.PersistEntity
                     Database.Persist.Class.PersistQuery
                     Database.Persist.Class.PersistUnique
                     Database.Persist.Class.PersistConfig
                     Database.Persist.Class.PersistField
                     Database.Persist.Class.PersistStore

                     Database.Persist.Sql.Migration
                     Database.Persist.Sql.Internal
                     Database.Persist.Sql.Types
                     Database.Persist.Sql.Raw
                     Database.Persist.Sql.Run
                     Database.Persist.Sql.Class
                     Database.Persist.Sql.Orphan.PersistQuery
                     Database.Persist.Sql.Orphan.PersistStore
                     Database.Persist.Sql.Orphan.PersistUnique

                     Database.Persist.TH

                     Database.Persist.Sqlite
                     Database.Persist.Postgresql
                     Database.Persist.MySQL
                     Database.Sqlite

    hs-source-dirs: ., test, persistent, persistent-template, persistent-sqlite, persistent-postgresql, persistent-mysql, persistent-mongoDB, persistent-couchdb

    ghc-options:   -Wall
    -- if impl(ghc >= 7.4)
    --   cpp-options: -DGHC_7_4

    build-depends:   base                     >= 4       && < 5
                   , HUnit
                   , hspec >= 1.3
                   , hspec-expectations
                   , file-location >= 0.4
                   , template-haskell
                   , aeson
                   , lifted-base
                   , network
                   , path-pieces >= 0.1
                   , text
                   , transformers
                   , monad-control
                   , containers
                   , bytestring
                   , base64-bytestring
                   , conduit >= 0.5.3
                   , resourcet >= 0.3
                   , time >= 1.2
                   , random >= 1.0
                   , QuickCheck >= 2.5
                   , blaze-html >= 0.5
                   , quickcheck-instances >= 0.3
                   , blaze-html >= 0.5 && < 0.6
                   , pool-conduit
                   , transformers-base
                   , attoparsec
                   , vector
                   , unordered-containers
                   , monad-logger >= 0.2.3
                   , hashable
                   -- actually just a mongoDB dependency
                   -- fixes build warning on current build server
                   , cereal
                   , mongoDB       >= 1.3
                   , bson
                   , silently
                   , postgresql-libpq
                   , postgresql-simple
                   , mysql
                   , mysql-simple
                   , blaze-builder


   if flag(postgresql)
     build-depends:
                   -- postgresql dependencies
                     postgresql-simple     >= 0.2
                   , postgresql-libpq      >= 0.6

     cpp-options: -DWITH_POSTGRESQL


   if flag(mysql)
     build-depends:
                   -- MySQL dependencies
                     mysql-simple          >= 0.2.2.3
                   , mysql                 >= 0.1.1.3

     exposed-modules:
                     Database.Persist.MySQL

     cpp-options: -DWITH_MYSQL


   if flag(mongodb)
     build-depends:
                   -- mongoDB dependencies
                     mongoDB       == 1.3.*
                   , cereal
                   , bson

     cpp-options: -DWITH_MONGODB -DDEBUG
     exposed-modules:
                     Database.Persist.MongoDB


   if flag(couchdb)
     build-depends: CouchDB               >= 1.2

     cpp-options: -DWITH_COUCHDB -DDEBUG
     exposed-modules:
                     Database.Persist.CouchDB


test-suite test
    type:          exitcode-stdio-1.0
    main-is:       main.hs
    hs-source-dirs: test

    build-depends:   base >= 4 && < 5
                   , persistent-test
                   , hspec
                   , system-filepath
                   , system-fileio
                   , resourcet

    if flag(mongodb)
        cpp-options: -DWITH_MONGODB -DDEBUG
    if flag(postgresql)
        cpp-options: -DWITH_POSTGRESQL
    if flag(mysql)
        cpp-options: -DWITH_MYSQL


source-repository head
  type:     git
  location: git://github.com/yesodweb/persistent.git
